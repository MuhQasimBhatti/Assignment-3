// Write a program to add two matrices and check if they can add then sum otherwise display a message

#include<iostream>
using namespace std;
int main()
{
	int r1, c1, r2, c2;

	cout << "Enter rows and coloumns for the matrix A" << endl;
	cin >> r1 >> c1;

	cout << "Enter rows and coloumns for the matrix B" << endl;
	cin >> r2 >> c2;

	if (r1 == r2 && c1 == c2)
	{
		int** A = new int* [r1];

		for (int i = 0; i < r1; i++)
			A[i] = new int[c1];

		int** B = new int* [r2];

		for (int i = 0; i < r2; i++)
			B[i] = new int[c2];

		int** C = new int* [r1];

		for (int i = 0; i < r1; i++)
			C[i] = new int[c2];

		//-----------------------------------------------------
			cout << "Enter matrix A" << endl;
		for (int i = 0; i < r1; i++)
			for (int j = 0; j < c1; j++)
				cin >> A[i][j];

		cout << "Enter matrix B" << endl;
		for (int i = 0; i < r2; i++)
			for (int j = 0; j < c2; j++)
				cin >> B[i][j];

		cout << endl << endl << endl;

		cout << "Matrix A:" << endl;
		for (int i = 0; i < r1; i++)
		{
			for (int j = 0; j < c1; j++)
				cout << A[i][j] << " ";
			cout << endl;
		}

		cout << "\nMatrix B:" << endl;
		for (int i = 0; i < r2; i++)
		{
			for (int j = 0; j < c2; j++)
				cout << B[i][j] << " ";
			cout << endl;
		}

		for (int i = 0; i < r1; i++)
			for (int j = 0; j < c1; j++)
				C[i][j] = A[i][j] + B[i][j];

		cout << "\nMatrix A + Matrix B:"<<endl;
		for (int i = 0; i < r1; i++)
		{
			for (int j = 0; j < c2; j++)
				cout << C[i][j] << " ";
			cout << endl;
		}
	}
	else
		cout << "These matrix can not be added as their order is not equal" << endl;

	
}
