// Write a program to enter two matrices and if they can multipy then show their product

#include<iostream>
using namespace std;
int main()
{
	int r1, c1, r2, c2;
	cout << "Enter rows and coloumns of the matrix A" << endl;
	cin >> r1 >> c1;
	cout << "Enter rows and coloumns of the matrix B" << endl;
	cin >> r2 >> c2;

	if (c1 == r2)
	{
		int** A = new int*[r1];

		for (int i = 0; i < r1; i++)
			A[i] = new int[c1];

		int** B = new int*[r2];

		for (int i = 0; i < r2; i++)
			B[i] = new int[c2];

		int** C = new int* [r1];

		for (int i = 0; i < r1; i++)
			C[i] = new int[c2];

		cout << "Enter matrix A" << endl;
		for (int i = 0; i < r1; i++)
			for (int j = 0; j < c1; j++)
				cin >> A[i][j];

		cout << "Enter matrix B" << endl;
		for (int i = 0; i < r2; i++)
			for (int j = 0; j < c2; j++)
				cin >> B[i][j];

		for(int i=0;i<r1;i++)
			for (int j = 0; j < c2; j++)
			{
				C[i][j] = 0;
				for (int k = 0; k < c1; k++)
					C[i][j] += A[i][k] * B[k][j];
			}

		cout << "Matrix A * Matrix B:" << endl;
		for (int i = 0; i < r1; i++)
		{
			for (int j = 0; j < c2; j++)
				cout << C[i][j] << " ";
			cout << endl;
		}

	}
	else
		cout << "Matrices can not be multipied" << endl;
}
